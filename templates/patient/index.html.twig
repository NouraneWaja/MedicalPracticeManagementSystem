{% extends 'base.html.twig' %}

{% block title %}Patient index{% endblock %}

{% block body %}
<div class="d-flex align-items-center justify-content-between">
    <h1 class="mr-4">Patient index</h1>
    <a href="{{ path('app_patient_new') }}" class="btn btn-primary btn-lg">Create new</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Date_de_naissance</th>
                <th>Adresse</th>
                <th>Num_tel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.nom }}</td>
                <td>{{ patient.prenom }}</td>
                <td>{{ patient.dateDeNaissance ? patient.dateDeNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ patient.adresse }}</td>
                <td>{{ patient.numTel }}</td>
                <td>
                    <a href="{{ path('app_patient_show', {'id': patient.id}) }}">show</a>
                    <a href="{{ path('app_patient_edit', {'id': patient.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
